- log_object_view '/lectures/new'

.top_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/lectures")
    = RDisplay.submit_form_link("new_lecture")

= view_title @object, :new

= form_for(@object) do |f|

  = render :partial=>'/shared/admin/form_errors'
  = render :partial=>'/shared/admin/form_parent',     :locals=>{:f=>f}
  = render :partial=>'/shared/admin/form_details',    :locals=>{:f=>f}
  = render :partial=>'/shared/admin/form_html_block', :locals=>{:f=>f,:field_name=>:abstract,:rows=>10}
  = render :partial=>'/shared/admin/form_html_block', :locals=>{:f=>f}
          
.form_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/lectures")
    = RDisplay.submit_form_link("new_lecture")
    
