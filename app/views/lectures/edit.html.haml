- log_object_view '/lectures/edit'

.top_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/lectures/#{@object.id}")
    = RDisplay.submit_form_link("edit_lecture_#{@object.id}")

= view_title @object, :edit

= form_for(@object) do |f|

  = render :partial=>'/shared/admin/form_errors'
  = render :partial=>'/shared/admin/form_parent',  :locals=>{:f=>f}
  = render :partial=>'/shared/admin/form_details', :locals=>{:f=>f}
          
.form_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/lectures/#{@object.id}")
    = RDisplay.submit_form_link("edit_lecture_#{@object.id}")
