- log_object_view '/lectures/show'

= render :partial=>'/layouts/admin/filters'

.top_actions.buttons
  .buttons_inner
    = link_to 'list', lectures_path, :class=>'list'
    = link_to 'new', new_lecture_path, :class=>'new'
    = buttons_divider
    - if @object.active
      = link_to 'disable', "/lectures/#{@object.id}/activate", :class=>'disable'
    - else
      = link_to 'activate', "/lectures/#{@object.id}/activate", :class=>'activate'
    = buttons_divider
    = link_to 'publish', "/lectures/#{@object.id}/publish", :class=>'publish'
  

= render :partial=>'/shared/admin/show_object'

