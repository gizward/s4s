- log_object_view 'products/edit_meta'

.top_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/products/#{@object.id}?show[meta]=yes")
    = RDisplay.submit_form_link("edit_product_#{@object.id}")

= view_title @object, :edit

= form_for(@object) do |f|

  = render :partial=>'/shared/admin/form_errors'
  = render :partial=>'form_meta', :locals=>{:f=>f}
          
.form_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/products/#{@object.id}?show[meta]=yes")
    = RDisplay.submit_form_link("edit_product_#{@object.id}")
