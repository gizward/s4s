- log_object_view '/documents/edit'

.top_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/documents/#{@object.id}")
    = RDisplay.submit_form_link("edit_document_#{@object.id}")

= view_title @object, :edit

= form_for(@object) do |f|

  = render :partial=>'/shared/admin/form_errors'
  = render :partial=>'/shared/admin/form_details',  :locals=>{:f=>f,:required=>[:name]}
  
.form_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/documents/#{@object.id}")
    = RDisplay.submit_form_link("edit_document_#{@object.id}")
