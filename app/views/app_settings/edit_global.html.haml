- log_object_view "/app_settings/edit_global"

.top_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/app_settings/#{@object.id}?show[global]=yes")
    = RDisplay.submit_form_link("edit_app_setting_#{@object.id}")

= view_title @object, :edit
= sub_title 'Global Fields'

= form_for(@object,:url=>"/app_settings/#{@object.id}/update_global") do |f|

  = render :partial=>'/shared/admin/form_errors'
  = render :partial=>'form_global', :locals=>{:f=>f,:prefix=>'home'}
          
.form_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/app_settings/#{@object.id}?show[global]=yes")
    = RDisplay.submit_form_link("edit_app_setting_#{@object.id}")
