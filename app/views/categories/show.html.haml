- log_object_view '/categories/show'

= render :partial=>'/layouts/admin/filters'

.top_actions.buttons
  .buttons_inner
    = link_to 'list', categories_path, :class=>'list'
    = link_to 'new', new_category_path, :class=>'new'
    = buttons_divider
    - if @object.active
      = link_to 'disable', "/categories/#{@object.id}/activate", :class=>'disable'
    - else
      = link_to 'activate', "/categories/#{@object.id}/activate", :class=>'activate'
  

= render :partial=>'/shared/admin/show_object'

