- log_object_view 'tags/show'

= render :partial=>'/layouts/admin/filters'

.top_actions.buttons
  .buttons_inner
    = link_to 'list', tags_path, :class=>'list'
    = link_to 'new', new_tag_path, :class=>'new'
    = buttons_divider
    - if @object.active
      = link_to 'disable', "/tags/#{@object.id}/activate", :class=>'disable'
    - else
      = link_to 'activate', "/tags/#{@object.id}/activate", :class=>'activate'
  

= render :partial=>'/shared/admin/show_object'

