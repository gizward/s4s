- log_object_view 'css_styles/show'

= render :partial=>'/layouts/admin/filters'

.top_actions.buttons
  .buttons_inner
    = link_to 'list', css_styles_path, :class=>'list'
    = link_to 'new', new_css_style_path, :class=>'new'
    = buttons_divider
    - if @object.active
      = link_to 'disable', "/css_styles/#{@object.id}/activate", :class=>'disable'
    - else
      = link_to 'activate', "/css_styles/#{@object.id}/activate", :class=>'activate'
    = link_to 'publish', "/css_styles/#{@object.id}/publish", :class=>'publish'
  

= render :partial=>'/shared/admin/show_object'

