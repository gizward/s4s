- log_object_view '/blogs/edit'

.top_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/blogs/#{@object.id}")
    = RDisplay.submit_form_link("edit_blog_#{@object.id}")

= view_title @object, :edit

= form_for(@object) do |f|

  = render :partial=>'/shared/admin/form_errors'
  = render :partial=>'/shared/admin/form_details',  :locals=>{:f=>f,:required=>[:title]}
  = render :partial=>'form_details',                :locals=>{:f=>f}
  
  .block
    .title= 'Tags'
    .content
      %table
        = RDisplay.row('Tags',f.text_field(:tags_str,:value=>@object.get_tags_str))
          
.form_actions.buttons
  .buttons_inner
    = RDisplay.cancel_form_link("/blogs/#{@object.id}")
    = RDisplay.submit_form_link("edit_blog_#{@object.id}")
