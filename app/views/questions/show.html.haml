- log_object_view '/questions/show'

= render :partial=>'/layouts/admin/filters'

.top_actions.buttons
  .buttons_inner
    = link_to 'list', questions_path, :class=>'list'
    = link_to 'new', new_question_path, :class=>'new'
    = buttons_divider
    - if @object.active
      = link_to 'disable', "/questions/#{@object.id}/activate", :class=>'disable'
    - else
      = link_to 'activate', "/questions/#{@object.id}/activate", :class=>'activate'
    = buttons_divider
    = link_to 'publish', "/questions/#{@object.id}/publish", :class=>'publish'
  

= render :partial=>'/shared/admin/show_object'

