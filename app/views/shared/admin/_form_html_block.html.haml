- log_shared_partial '/shared/admin/form_html_block'

- item ||= @object
- if item

  - table_name ||= item.class.name.tableize
  - class_name ||= table_name.singularize
  - field_name ||= 'content'
  - rows       ||= 40

  .block.for_text_entry
    .title= field_name.to_s.titleize
    .content
      .text_entry= f.text_area(field_name.to_sym,:rows=>rows)
