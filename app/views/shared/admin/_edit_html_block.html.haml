- log_shared_partial '/shared/admin/edit_html_block'

- item ||= @object
- if item

  - table_name ||= item.class.name.tableize
  - class_name ||= table_name.singularize
  - field_name ||= 'content'
  - height     ||= 300
  - rows       ||= 40
  
  .buttons
    .buttons_inner
      = RDisplay.cancel_form_link("/#{table_name}/#{item.id}?show[#{field_name}]=yes")
      = RDisplay.submit_form_link("edit_#{class_name}_#{item.id}")

  = view_title item,:edit
  = sub_title "Edit #{field_name.titleize}"

  = form_for(item,:url=>"/#{table_name}/#{item.id}/update_#{field_name}") do |f|

    = render :partial=>"/shared/admin/form_html_block", :locals=>{:f=>f,:item=>item,:field_name=>field_name,:rows=>rows}

  .buttons
    .buttons_inner
      = RDisplay.cancel_form_link("/#{table_name}/#{item.id}?show[#{field_name}]=yes")
      = RDisplay.submit_form_link("edit_#{class_name}_#{item.id}")
 