- log_object_view '/enrollments/show'

= render :partial=>'/layouts/admin/filters'

.top_actions.buttons
  .buttons_inner
    = link_to 'list', enrollments_path, :class=>'list'
    = link_to 'new', new_enrollment_path, :class=>'new'
    = buttons_divider
    - if @object.active
      = link_to 'disable', "/enrollment/#{@object.id}/activate", :class=>'disable'
    - else
      = link_to 'activate', "/enrollment/#{@object.id}/activate", :class=>'activate'  

= render :partial=>'/shared/admin/show_object'

